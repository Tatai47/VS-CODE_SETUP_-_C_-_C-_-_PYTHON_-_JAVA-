{
  "tasks": [
    {
      //This is for C language for windows gcc.exe
      "type": "cppbuild",
      "label": "C: gcc.exe build active file",
      "command": "add\\your\\windows\\system\\gcc\\path\\gcc.exe", //windows
      "args": [
        "-fdiagnostics-color=always", 
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}" 
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
